<p id="notice"><%= notice %></p>

<h1>Listing Testcases</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Title</th>
      <th>Summary</th>
      <th>Preconditions</th>
      <th>Status</th>
      <th>Importance</th>
      <th>Minutes</th>
      
    </tr>
  </thead>

  <tbody>
    <% @testcases.each do |testcase| %>
      <tr>
        <td><%= testcase.code %></td>
        <td><%= testcase.title %></td>
        <td><%= testcase.summary %></td>
        <td><%= testcase.preconditions %></td>
        <td><%= testcase.status %></td>
        <td><%= testcase.importance %></td>
        <td><%= testcase.minutes %></td>
      <td>
      <div class="w3-dropdown-hover">
    <button class="w3-button">Actions</button>
    <div class="w3-dropdown-content w3-bar-block w3-card-4">
        <td><%= link_to 'Show', testcase, :class => 'w3-bar-item w3-button' %></td>
        <td><%= link_to 'Edit', edit_testcase_path(testcase), :class => 'w3-bar-item w3-button' %></td>
        <td><%= link_to 'Destroy', testcase, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'w3-bar-item w3-button' %></td>
          </div>
  </div>
</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

