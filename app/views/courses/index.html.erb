<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<table class="w3-table-all">
  <thead>
    <tr>
      <th>Code</th>
      <th>Fullname</th>
      <th>Shortname</th>
      <th>Courseidnumber</th>
      <th>Summary</th>
      <th>Format</th>
      <th>Numberofweekstopics</th>
      <th>Start</th>
      <th>Hiddensections</th>
      <th>Newsitemstoshow</th>
      <th>Showgrades</th>
      <th>Showactivityreports</th>
      <th>Maxuploadsize</th>
      <th>Defaultroles</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.code %></td>
        <td><%= course.fullname %></td>
        <td><%= course.shortname %></td>
        <td><%= course.courseidnumber %></td>
        <td><%= course.summary %></td>
        <td><%= course.format %></td>
        <td><%= course.numberofweekstopics %></td>
        <td><%= course.start %></td>
        <td><%= course.hiddensections %></td>
        <td><%= course.newsitemstoshow %></td>
        <td><%= course.showgrades %></td>
        <td><%= course.showactivityreports %></td>
        <td><%= course.maxuploadsize %></td>
        <td><%= course.defaultroles %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

