  <div class="field">
        <%= f.label :shortname %><br>
    <%= f.text_field :shortname %>
      </div>
  <div class="field">
        <%= f.number_field :courseidnumber, {min: "0", max: "500"} %>
      </div>
  <div class="field">
        <%= f.label :summary %><br>
    <%= f.text_field :summary %>
      </div>
  <div class="field">
        <%= f.label :format %><br>
    <%= f.text_field :format %>
      </div>
  <div class="field">
        <%= f.number_field :numberofweekstopics, {min: "0", max: "500"} %>
      </div>
  <div class="field">
        <%= f.label :start %><br>
    <%= f.date_select :start %>
      </div>
  <div class="field">
        <%= f.label :hiddensections %><br>
    <%= f.text_field :hiddensections %>
      </div>
  <div class="field">
        <%= f.number_field :newsitemstoshow, {min: "0", max: "500"} %>
      </div>
  <div class="field">
        <%= f.label :showgrades %><br>
    <%= f.check_box :showgrades %>
