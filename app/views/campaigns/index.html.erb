<p id="notice"><%= notice %></p>

<h1>Listing Campaigns</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Owner</th>
      <th>Name</th>
      <th>Active</th>
      <th>Type</th>
      <th>Status</th>
      <th>Start</th>
      <th>End</th>
      <th>Expectedrevenue</th>
      <th>Budgetedcost</th>
      <th>Actualcost</th>
      <th>Expectedresponse</th>
      <th>Numsent</th>
      <th>Parentcampaign</th>
      
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.code %></td>
        <td><%= campaign.owner %></td>
        <td><%= campaign.name %></td>
        <td><%= campaign.active %></td>
        <td><%= campaign.type %></td>
        <td><%= campaign.status %></td>
        <td><%= campaign.start %></td>
        <td><%= campaign.end %></td>
        <td><%= campaign.expectedrevenue %></td>
        <td><%= campaign.budgetedcost %></td>
        <td><%= campaign.actualcost %></td>
        <td><%= campaign.expectedresponse %></td>
        <td><%= campaign.numsent %></td>
        <td><%= campaign.parentcampaign %></td>
      <td>
      <div class="w3-dropdown-hover">
    <button class="w3-button">Actions</button>
    <div class="w3-dropdown-content w3-bar-block w3-card-4">
        <td><%= link_to 'Show', campaign, :class => 'w3-bar-item w3-button' %></td>
        <td><%= link_to 'Edit', edit_campaign_path(campaign), :class => 'w3-bar-item w3-button' %></td>
        <td><%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'w3-bar-item w3-button' %></td>
          </div>
  </div>
</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

